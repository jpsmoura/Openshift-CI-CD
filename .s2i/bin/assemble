#!/bin/sh
echo "Tar file absolute path: " $APP_LOCATION

echo "Starting Download"

curl -H "Accept: application/zip" $APP_LOCATION -o ~/${BUNDLE_NAME}

cd ~
echo "Bundle Downloaded " ls -l | grep "^d"

# Unzip and remove the root directory
echo "Unzipping Tar"
tar -xvzf ${BUNDLE_NAME} -C ~/hawt-app --strip 1
cd ~
echo "Unzipped Files  " ls -l | grep "^d"
