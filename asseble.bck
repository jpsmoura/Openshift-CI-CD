#!/bin/sh
echo "Tar file absolute path: " $APP_LOCATION

echo "Starting Download"

curl -H "Accept: application/zip" $APP_LOCATION -o ~/${BUNDLE_NAME}

cd ~
echo "Bundle Downloaded "
ls -l | grep "^d"
#Check If needed
# Unzip and remove the root directory

echo "Joao: " ${DEPLOYMENTS_DIR}

echo "Unzipping Tar"
tar -xvzf ${BUNDLE_NAME} -C /deployments/ --strip 1
echo "Unzip Complete"
cd ~
echo "Unzipped Files"
ls -l | grep "^d"
